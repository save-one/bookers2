					<tr><td></td><td><a href="" book_path ><%= @books.title %></a></td><td><%= @books.opinion %></td><td>edit</td><td>destroy</td></tr>
				</tbody>
			</table>
		</div>
		<% else %>
		<div class="col-sm-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr><td></td><td><a href= "" book_path ><%= @books.title %></a></td><td><%= @books.opinion %></td></tr>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
