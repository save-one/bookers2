	<div class="row">
		<div class="col-sm-3">
			<h2>User info</h2>
			<img >
			<table class="table">
				<tbody>
					<tr><td>name</td><td>ss</td></tr>
					<tr><td>introduction</td><td>123</td>
				</tbody>
			</table>
			<%= link_to "edit", edit_user_path %>
