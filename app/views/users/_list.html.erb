<h2>New book</h2>
	<div class="row">
	<div class="form-group">
		<%= form_for(book) do |f| %>
			<h5 class="labels", style="margin-top: 0">Title</h5>
				<%= f.text_field :title, class: "form-control input-sm" %>
			<h5 class="labels">Opinion</h5>
				<%= f.text_area :opinion, class: "form-control input-sm", style: "margin-bottom: 10px" %>
				<%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
		<% end %>
	</div>
	</div>
</div>